{
  "name": "visualizer",
  "displayName": "Image Data Visualizer",
  "description": "Visualize numpy/tensor/PIL or image file data directly in VS Code.",
  "publisher": "sunlin",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onDebug",
    "onCommand: visualize.debugVariable",
    "onCommand: visualize.visualizeImage"
  ],
  "scripts": {
    "compile": "tsc -p ./",
    "build": "node build.js",
    "package": "vsce package"
  },
  "contributes": {
    "commands": [
      {
        "command": "visualize.debugVariable",
        "title": "Visualize Data"
      },
      {
        "command": "visualize.visualizeImage",
        "title": "Visualize Image File"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "visualize.debugVariable",
          "group": "debug",
          "when": "(debugType == 'python' || debugType == 'debugpy') && inDebugMode"
        }
      ],
      "debug/variables/context": [
        {
          "command": "visualize.debugVariable",
          "group": "navigation",
          "when": "(debugType == 'python' || debugType == 'debugpy') && inDebugMode"
        }
      ],
      "debug/watch/context": [
        {
          "command": "visualize.debugVariable",
          "group": "navigation",
          "when": "(debugType == 'python' || debugType == 'debugpy') && inDebugMode"
        }
      ],
      "explorer/context": [
        {
          "command": "visualize.visualizeImage",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|bmp|tif|tiff)$/",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "visualize.visualizeImage",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|bmp|tif|tiff)$/",
          "group": "navigation"
        }
      ]
    }
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linsun449/visualizer.git"
  },
  "license": "Proprietary",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark",
    "image": "asset/banner.png"
  },
  "dependencies": {
    "decode-bmp": "^0.2.1",
    "image-type": "^4.1.0",
    "jpeg-js": "^0.4.4",
    "pngjs": "^7.0.0",
    "tiff": "^7.1.2"
  }
}
