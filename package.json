{
  "name": "visualizer",
  "displayName": "Image Data Visualizer",
  "description": "Visualize numpy/tensor/PIL or image file data directly in VS Code.",
  "publisher": "sunlin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onDebug"
  ],
  "scripts": {
    "compile": "tsc -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "visualize.debugVariable",
        "title": "Visualize Data"
      },
      {
        "command": "visualize.visualizeImage",
        "title": "Visualize Image File"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "visualize.debugVariable",
          "group": "debug",
          "when": "(debugType == 'python' || debugType == 'debugpy') && inDebugMode"
        }
      ],
      "debug/variables/context": [
        {
          "command": "visualize.debugVariable",
          "group": "navigation",
          "when": "(debugType == 'python' || debugType == 'debugpy') && inDebugMode"
        }
      ],
      "debug/watch/context": [
        {
          "command": "visualize.debugVariable",
          "group": "navigation",
          "when": "(debugType == 'python' || debugType == 'debugpy') && inDebugMode"
        }
      ],
      "explorer/context": [
        {
          "command": "visualize.visualizeImage",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|bmp)$/",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "visualize.visualizeImage",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|bmp)$/",
          "group": "navigation"
        }
      ]
    }
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linsun449/visualizer.git"
  },
  "license": "Proprietary",
  "dependencies": {
    "image-size": "^2.0.2",
    "sharp": "^0.34.5"
  },
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark",
    "image": "asset/banner.png"
  }
}
